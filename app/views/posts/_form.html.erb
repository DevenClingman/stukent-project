<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group">
    <%= form.text_field :title, id: :post_title, placeholder: "Title", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, id: :post_body, placeholder: "Body", rows: 25, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published, id: :post_published %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn btn-primary btn-lg' %>
  </div>

<% end %>
